<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:padding="15dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgPlace"
        android:layout_width="305dp"
        android:layout_height="540dp"
        android:src="@drawable/arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgLocationPin"
        android:layout_width="12dp"
        android:layout_height="15dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_pin"
        app:layout_constraintStart_toStartOf="@id/imgPlace"
        app:layout_constraintTop_toTopOf="@id/imgPlace" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPlaceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-8dp"
        android:text="Barcelona"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/imgLocationPin"
        app:layout_constraintTop_toTopOf="@id/imgLocationPin" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgFire"
        android:layout_width="11dp"
        android:layout_height="15dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_fire"
        app:layout_constraintStart_toEndOf="@id/tvPlaceName"
        app:layout_constraintTop_toTopOf="@id/imgPlace" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvReactions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-8dp"
        android:text="2500"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/imgFire"
        app:layout_constraintTop_toTopOf="@id/imgFire" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="97dp"
        android:text="title 2"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@id/imgPlace"
        app:layout_constraintStart_toStartOf="@id/imgPlace" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="43dp"
        android:text="$120"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/imgPlace"
        app:layout_constraintStart_toStartOf="@id/imgPlace" />

    <RatingBar
        android:layout_width="wrap_content"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:rating="0"
        android:id="@+id/ratingBar"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="-50dp"
        app:layout_constraintBottom_toBottomOf="@id/imgPlace"
        app:layout_constraintEnd_toEndOf="@id/imgPlace"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>